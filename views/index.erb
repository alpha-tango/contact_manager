<h1>Contacts</h1>

<p><a href ="/new">Submit a new phone number </a></p>

<form action="/" method="get">
  <input type='search' name='query'>
  <input type="submit" value="Search">
</form>
<ul>
  <% @contacts.each do |contact| %>
    <li><a href="/contacts/<%= contact.id%>"><%= contact.name %> </a>- <%= contact.phone_number %></li>
  <% end %>
</ul>
